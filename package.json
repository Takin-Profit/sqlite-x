{
  "name": "@takinprofit/sqlite-x",
  "version": "1.0.10",
  "description": "A modern node:sqlite wrapper for TypeScript",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "tsx --test --experimental-sqlite src/**/*.test.ts",
    "test:idx": "tsx --test --experimental-sqlite --test-name-pattern \"creates index via SQL context\"",
    "test:only": "tsx --test --experimental-sqlite --test-only src/**/*.test.ts",
    "bundle:claude": "node claude-bundle.mjs"
  },
  "keywords": [
    "sqlite",
    "database",
    "wrapper",
    "typescript",
    "node:sqlite"
  ],
  "files": [
    "dist"
  ],
  "author": "Takin Profit LLC",
  "license": "MIT",
  "devDependencies": {
    "@swc/core": "^1.10.9",
    "@types/node": "^22.10.10",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "type-fest": "^4.33.0",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@sqltools/formatter": "^1.2.5"
  },
  "engines": {
    "node": ">=v23.4.0"
  }
}
